@page "/concerts"
@attribute [Authorize]
@inject HttpClient Http

<header class="bg-gray-100">
    <div class="container mx-auto py-6 px-2 sm:px-4 lg:px-8">
        <div class="flex justify-center align-items">
            <div class="flex-grow rounded bg-white p-4 border">
                <div class="text-gray-600 text-sm">Total</div>
                <div class="text-4xl font-bold leading-tight">5</div>
            </div>
            <div class="flex-grow ml-4 rounded bg-white p-4 border">
                <div class="text-gray-600 text-sm">This Year</div>
                <div class="text-4xl font-bold leading-tight">5</div>
            </div>
            <div class="flex-grow ml-4 rounded bg-white p-4 border">
                <div class="text-gray-600 text-sm">This Month</div>
                <div class="text-4xl font-bold leading-tight">5</div>
            </div>
        </div>
    </div>
</header>

<div class="container mx-auto sm:px-6 lg:px-8">
    @if(_concerts != null) {
        <div class="py-2">
            <input
                class="bg-white appearance-none border-2 border-gray-300 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:border-purple-500"
                id="filter"
                placeholder="Filter by Title..."
                type="text"
                @oninput="FilterData" />
        </div>
        <ul class="py-6">
        </ul>
    }
</div>

@code {
  private string _searchValue = "";
      private List<TMovie> _concerts;

      /*protected override async Task OnInitializedAsync()
      {
        _concerts = await Http.GetFromJsonAsync<List<TMovie>>("sample-data/movies.json");
      }*/

      private void FilterData(ChangeEventArgs e)
      {
          _searchValue = e.Value.ToString().TrimStart().ToLower();
      }
}

